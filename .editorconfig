# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON, and related files
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Package.json and lock files
[{package.json,pnpm-lock.yaml,package-lock.json}]
indent_style = space
indent_size = 2

# Configuration files
[*.{eslintrc,prettierrc,eslintrc.js,prettierrc.js}]
indent_style = space
indent_size = 2

# Test files
[*.{test,spec}.{js,ts,tsx}]
indent_style = space
indent_size = 2

# Declaration files
[*.d.ts]
indent_style = space
indent_size = 2

# Config files in various formats
[{tsconfig,vitest.config,tsup.config,eslint.config}.{json,js,ts}]
indent_style = space
indent_size = 2

# Wasp files (for the CLI project)
[*.wasp]
indent_style = space
indent_size = 2

# Prisma schema files
[*.prisma]
indent_style = space
indent_size = 2

# Eta template files
[*.eta]
indent_style = space
indent_size = 2
